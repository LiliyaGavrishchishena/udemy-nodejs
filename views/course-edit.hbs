<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required
      value={{course.title}}>
    <label for="title">Title</label>
    <span class="helper-text" data-error="Enter name of the course"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required
      min='1' value={{course.price}}>
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price of the course"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required
      value={{course.img}}>
    <label for="img">URL img</label>
    <span class="helper-text" data-error="Add url of the img"></span>
  </div>
  <input type="hidden" name="id" value={{course._id}}>
  <button type="submit" class='btn waves-effect waves-light cyan darken-1'>Edit
    course</button>
</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value={{course._id}}>
  <button class='btn waves-effect waves-light red lighten-1'>Delete
    course</button>
</form>